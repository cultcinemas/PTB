# ================================
# TELEGRAM BOT CONFIGURATION
# ================================
# Get from @BotFather on Telegram
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Get from https://my.telegram.org
API_ID=YOUR_API_ID_HERE
API_HASH=YOUR_API_HASH_HERE

# ================================
# MONGODB CONFIGURATION - MULTI-DATABASE SUPPORT
# ================================

# PRIMARY DATABASE (MAIN)
# Get your MongoDB connection string from: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=YOUR_MONGODB_URI_HERE

# SECONDARY DATABASE (BACKUP/FAILOVER) - OPTIONAL
# Create a second MongoDB cluster for automatic failover
# Leave empty if you only want to use one database
# Recommended for production to ensure high availability
MONGODB_URI_SECONDARY=

# DATABASE NAME
# Name of the database to use (same on both primary and secondary)
DB_NAME=price_tracker_bot

# MongoDB Connection Settings (Advanced) - Optional
MONGODB_CONNECT_TIMEOUT=5000
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10

# ================================
# REDIS CONFIGURATION (Optional)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false

# ================================
# AFFILIATE CONFIGURATION - AMAZON
# ================================
# Get your Amazon Associates tag from: https://affiliate.amazon.in
# Format: yourusername-21 (for Amazon India) or yourusername-20 (for Amazon US)
AMAZON_AFFILIATE_TAG=yourtag-21
AMAZON_AFFILIATE_ENABLED=true

# ================================
# AFFILIATE CONFIGURATION - FLIPKART
# ================================
# Get your Flipkart affiliate ID from: https://affiliate.flipkart.com
FLIPKART_AFFILIATE_ID=youraffid
FLIPKART_AFFILIATE_ENABLED=true

# ================================
# AFFILIATE CONFIGURATION - MYNTRA
# ================================
# Contact Myntra or use CJ Affiliate for Myntra affiliate program
MYNTRA_AFFILIATE_ID=your_myntra_id
MYNTRA_AFFILIATE_ENABLED=false

# ================================
# AFFILIATE CONFIGURATION - MEESHO
# ================================
# Sign up at: https://www.meesho.com/reseller
MEESHO_AFFILIATE_ID=your_meesho_id
MEESHO_AFFILIATE_ENABLED=false

# ================================
# AFFILIATE CONFIGURATION - SNAPDEAL
# ================================
# Sign up at: https://affiliate.snapdeal.com
SNAPDEAL_AFFILIATE_ID=your_snapdeal_id
SNAPDEAL_AFFILIATE_ENABLED=false

# ================================
# AFFILIATE CONFIGURATION - EBAY
# ================================
# Get your eBay Partner Network campaign ID from: https://partnernetwork.ebay.com
EBAY_CAMPID=your_ebay_campid
EBAY_AFFILIATE_ENABLED=false

# ================================
# AFFILIATE SETTINGS
# ================================
# Track affiliate clicks in database (optional)
TRACK_AFFILIATE_CLICKS=false

# Log affiliate conversions (optional)
LOG_AFFILIATE_CONVERSIONS=false

# Fallback to original URL if affiliate conversion fails
FALLBACK_TO_ORIGINAL_URL=true

# ================================
# BOT SETTINGS
# ================================
# How often to check prices (in seconds)
# 3600 = 1 hour, 1800 = 30 minutes, 7200 = 2 hours
CHECK_INTERVAL=3600

# Number of products to check per batch
BATCH_SIZE=100

# Maximum trackings allowed per user
MAX_TRACKINGS_FREE=10
MAX_TRACKINGS_PREMIUM=50

# ================================
# ADMIN CONFIGURATION
# ================================
# Comma-separated list of admin Telegram user IDs
# Get your user ID by messaging @userinfobot on Telegram
ADMIN_USER_IDS=123456789,987654321

# ================================
# LOGGING CONFIGURATION
# ================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=bot.log

# ================================
# DEPLOYMENT SETTINGS
# ================================
# Options: development, production
ENVIRONMENT=production

# Port for webhook (if using webhook mode)
PORT=8080

# ================================
# WEBHOOK CONFIGURATION (Optional)
# ================================
# Leave empty to use polling mode
WEBHOOK_URL=
WEBHOOK_PATH=/webhook
USE_WEBHOOK=false

# ================================
# EXTERNAL WEBHOOKS (Optional)
# ================================
# Discord webhook for notifications (optional)
DISCORD_WEBHOOK_URL=

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=

# ================================
# EMAIL NOTIFICATIONS (Optional)
# ================================
# SMTP configuration for email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_ENABLED=false

# ================================
# AI/ML FEATURES (Optional)
# ================================
# Enable price prediction using historical data
ENABLE_PRICE_PREDICTION=true

# Enable smart product recommendations
ENABLE_RECOMMENDATIONS=true

# Enable sentiment analysis for reviews (experimental)
ENABLE_SENTIMENT_ANALYSIS=false

# ================================
# PERFORMANCE SETTINGS
# ================================
# Enable Redis caching for better performance
ENABLE_CACHING=true

# Cache time-to-live in seconds
CACHE_TTL=300

# Number of async workers for scraping
ASYNC_WORKERS=4

# ================================
# DATABASE CLEANUP
# ================================
# Auto-cleanup inactive data after N days
AUTO_CLEANUP_DAYS=90

# Cleanup schedule (cron format: minute hour day month weekday)
# Default: Daily at 2 AM
CLEANUP_SCHEDULE=0 2 * * *

# ================================
# RATE LIMITING
# ================================
# Maximum requests per user
RATE_LIMIT_REQUESTS=30

# Rate limit period in seconds
RATE_LIMIT_PERIOD=60

# ================================
# SCRAPING SETTINGS
# ================================
# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# Use proxy for scraping (optional)
USE_PROXY=false
PROXY_URL=

# ================================
# NOTES
# ================================
# 1. Replace all placeholder values (yourtag-21, youraffid, etc.) with your actual affiliate IDs
# 2. Keep BOT_TOKEN, API_ID, API_HASH, and MONGODB_URI secure
# 3. For Amazon: Get your affiliate tag from Amazon Associates program
# 4. For Flipkart: Sign up at Flipkart Affiliate program
# 5. Admin user IDs: Message @userinfobot on Telegram to get your ID
# 6. Enable only the affiliate programs you have accounts for
# 7. Start with AMAZON and FLIPKART as they are the easiest to get approved
# 8. Test locally before deploying to production
