# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
API_ID=your_api_id
API_HASH=your_api_hash

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI_SECONDARY=mongodb+srv://username:password@cluster2.mongodb.net/database
DB_NAME=price_tracker_bot

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=false

# Affiliate Configuration - Amazon
AMAZON_AFFILIATE_TAG=yourtag-21
AMAZON_AFFILIATE_ENABLED=true

# Affiliate Configuration - Flipkart
FLIPKART_AFFILIATE_ID=youraffid
FLIPKART_AFFILIATE_ENABLED=true

# Affiliate Configuration - Myntra
MYNTRA_AFFILIATE_ID=your_myntra_id
MYNTRA_AFFILIATE_ENABLED=true

# Affiliate Configuration - Meesho
MEESHO_AFFILIATE_ID=your_meesho_id
MEESHO_AFFILIATE_ENABLED=true

# Affiliate Configuration - Snapdeal
SNAPDEAL_AFFILIATE_ID=your_snapdeal_id
SNAPDEAL_AFFILIATE_ENABLED=true

# Affiliate Configuration - eBay
EBAY_CAMPID=your_ebay_campid
EBAY_AFFILIATE_ENABLED=true

# Affiliate Settings
TRACK_AFFILIATE_CLICKS=false
LOG_AFFILIATE_CONVERSIONS=false
FALLBACK_TO_ORIGINAL_URL=true

# Bot Settings
CHECK_INTERVAL=3600  # seconds (1 hour)
BATCH_SIZE=100  # products per batch check
MAX_TRACKINGS_FREE=10
MAX_TRACKINGS_PREMIUM=50

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321  # comma-separated list

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Deployment
ENVIRONMENT=production
PORT=8080

# Webhook Configuration (Optional)
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PATH=/webhook
USE_WEBHOOK=false

# External Webhooks (Optional)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_ENABLED=false

# AI/ML Features (Optional)
ENABLE_PRICE_PREDICTION=true
ENABLE_RECOMMENDATIONS=true
ENABLE_SENTIMENT_ANALYSIS=false

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL=300  # seconds
ASYNC_WORKERS=4

# Database Cleanup
AUTO_CLEANUP_DAYS=90
CLEANUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=60  # seconds

# Scraping Settings
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
USE_PROXY=false
PROXY_URL=
